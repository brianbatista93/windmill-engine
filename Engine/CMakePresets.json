{
	"version": 5,
	"configurePresets": [
		{
			"name": "output-base",
			"hidden": true,
			"binaryDir": "${sourceDir}/out/build/${presetName}",
			"installDir": "${sourceDir}/out/install/${presetName}",
			"cacheVariables": {
				"CMAKE_CONFIGURATION_TYPES": "Debug;Profile;Release",
				"CMAKE_DEFAULT_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "linux-base",
			"hidden": true,
			"generator": "Ninja Multi-Config",
			"cacheVariables": {
				"ENABLE_TESTS_BENCHMARK": false,
				"CMAKE_TOOLCHAIN_FILE": "${sourceDir}/Build/CMake/Toolchain/Linux-GCC.cmake"
			},
			"vendor": {
				"microsoft.com/VisualStudioSettings/CMake/1.0": {
					"hostOS": [ "Linux" ]
				},
				"microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
					"sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
				}
			}
		},
		{
			"name": "linux-build",
			"displayName": "Linux",
			"description": "Target the Windows Subsystem for Linux (WSL) or a remote Linux system.",
			"inherits": [ "output-base", "linux-base" ]
		},
		{
			"name": "windows-base",
			"hidden": true,
			"generator": "Ninja Multi-Config",
			"cacheVariables": {
				"ENABLE_TESTS_BENCHMARK": false,
				"CMAKE_TOOLCHAIN_FILE": "${sourceDir}/Build/CMake/Toolchain/WindowsPC-MSVC.cmake"
			},
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"vendor": {
				"microsoft.com/VisualStudioSettings/CMake/1.0": {
					"hostOS": [ "Windows" ]
				},
				"microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
					"sourceDir": "$env{USERPROFILE}/.vs/$ms{projectDirName}"
				}
			}
		},
		{
			"name": "windows-build",
			"displayName": "Windows x64",
			"description": "Target Windows with the Visual Studio development environment. (x64)",
			"inherits": [ "output-base", "windows-base" ]
		},
		{
			"name": "macos-base",
			"hidden": true,
			"generator": "Ninja Multi-Config",
			"cacheVariables": {
				"ENABLE_TESTS_BENCHMARK": false,
				"CMAKE_TOOLCHAIN_FILE": "${sourceDir}/Build/CMake/Toolchain/MacOSX-Clang.cmake"
			},
			"vendor": {
				"microsoft.com/VisualStudioSettings/CMake/1.0": {
					"hostOS": [ "macOS" ]
				},
				"microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
					"sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
				}
			}
		},
		{
			"name": "macos-build",
			"displayName": "macOS",
			"description": "Target macOS with the Xcode development environment.",
			"inherits": [ "output-base", "macos-base" ]
		}
	]
}